<Window x:Class="Travel_Tracker.TimerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Travel_Tracker"
        mc:Ignorable="d"
        Title="Travel Tracker" Height="150" Width="315">
   <Grid>
      <Grid.ColumnDefinitions>
         <ColumnDefinition Width="2*"/>
         <ColumnDefinition Width="1*"/>
      </Grid.ColumnDefinitions>
      <TextBlock
         FontSize="50"
         Name="dateText"
         Grid.Row="0"
         Grid.Column="0"
         HorizontalAlignment="Center"
         VerticalAlignment="Center"/>
      <Image
         Name="WeatherIcon"
         Margin="25, 25, 25, 25"
         Source="{Binding WeatherImageSource, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
         Grid.Row="0"
         Grid.Column="1"/>
   </Grid>
</Window>
